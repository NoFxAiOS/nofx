# NOFX Environment Variables Template
# Copy this file to .env and modify the values as needed

# Development Mode Settings
# Set to true to disable 2FA authentication in development mode
DISABLE_OTP=false

# Ports Configuration
# Backend API server port (internal: 8080, external: configurable)
NOFX_BACKEND_PORT=8080

# Frontend web interface port (Nginx listens on port 80 internally)
NOFX_FRONTEND_PORT=3000

# Timezone Setting
# System timezone for container time synchronization
NOFX_TIMEZONE=Asia/Shanghai

# Security Settings
# JWT Secret (Change this in production)
JWT_SECRET=your-jwt-secret-key-change-in-production-make-it-long-and-random

# Data Encryption Key (Generate with setup_encryption.sh)
DATA_ENCRYPTION_KEY=

