# ==================== Telegram Account Configuration ====================
# API credentials from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE_NUMBER=+1234567890
TELEGRAM_PASSWORD=your_2fa_password_if_enabled
TELEGRAM_SESSION_NAME=telegram_monitor_optimized

# ==================== Monitoring Behaviour ====================
# Listen to every joined channel when true; otherwise仅监听允许列表
LISTEN_ALL_SUBSCRIBED_CHANNELS=false
# Block private chats from being recorded
BLOCK_PRIVATE_MESSAGES=false
# Comma-separated sender IDs to skip (默认包含 Telegram 官方通知 777000)
BLOCKED_SENDER_IDS=777000
# Channel allowlist (逗号分隔，可使用-100前缀ID或用户名)
CHANNEL_ALLOWLIST=
# 是否启用发送者白名单过滤
ENABLE_SENDER_WHITELIST=false

# ==================== Storage & Paths ====================
# SQLite 数据库存储路径
DATABASE_PATH=./data/jtbot.db

# ==================== Network / Proxy ====================
# 是否对所有请求使用代理
USE_PROXY=true
# Telethon 代理设置（如无需代理可留空或设为false）
PROXY_TYPE=http
PROXY_HOST=127.0.0.1
PROXY_PORT=9910
PROXY_USERNAME=
PROXY_PASSWORD=
# 全局 HTTP/HTTPS 代理 URL（可选）
HTTP_PROXY=http://127.0.0.1:9910
HTTPS_PROXY=http://127.0.0.1:9910
