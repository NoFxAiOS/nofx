DATABASE_URL=sqlite+pysqlite:///./data.db
ENABLE_SCHEDULER=1
# 单独开关：Investing 与 OpenBB 调度
ENABLE_INVESTING_SCHEDULER=1
# Investing Widget 参数（建议使用 UTC 时区，抓意大利：countries=10, lang=IT）
INVESTING_WIDGET_BASE=https://sslecal2.investing.com
INVESTING_COUNTRIES=10
INVESTING_LANG=IT
INVESTING_TZ_ID=0

# OpenBB（可选）：启用自动调度并指定 provider（如 tradingeconomics|fmp|nasdaq）
ENABLE_OPENBB_SCHEDULER=0
OPENBB_PROVIDER=tradingeconomics

# 是否在启动时立即拉取一次（避免等待调度周期）
RUN_ON_STARTUP=1
