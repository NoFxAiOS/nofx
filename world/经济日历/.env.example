DATABASE_URL=sqlite+pysqlite:///./economic_calendar.db
ENABLE_SCHEDULER=1
ENABLE_INVESTING_SCHEDULER=0
# Investing Widget 参数（建议使用 UTC 时区，抓意大利：countries=10, lang=IT）
INVESTING_WIDGET_BASE=https://sslecal2.investing.com
INVESTING_COUNTRIES=10
INVESTING_LANG=IT
INVESTING_TZ_ID=0

# OpenBB（启用免 key 模式将不会报错但可能抓不到数据）
ENABLE_OPENBB_SCHEDULER=1
OPENBB_PROVIDER=tradingeconomics
RUN_ON_STARTUP=1

# Discord 配置
DISCORD_TOKEN=
DISCORD_CHANNEL_ID=

# 日历发送配置
CALENDAR_PAST_DAYS=3        # 过去多少天的日历
CALENDAR_FUTURE_DAYS=30     # 未来多少天的日历
CALENDAR_BATCH_SIZE=10      # 每条消息最多显示多少条事件

# 代理配置
# PROXY_MODE 支持三种模式:
#   - auto (默认): 智能检测，优先本地网络，失败后自动使用代理
#   - always: 总是使用代理
#   - never: 从不使用代理
PROXY_MODE=auto
USE_PROXY=false
# HTTP_PROXY=http://your-proxy-address:port
# HTTPS_PROXY=http://your-proxy-address:port
NETWORK_TEST_TIMEOUT=5

# 定时任务配置 (Scheduler)
SCHEDULE_ENABLED=true
SCHEDULE_DAILY_TIME=08:00          # 每天任务时间 (HH:MM，北京时间)
SCHEDULE_WEEKLY_TIME=08:00         # 每周任务时间 (HH:MM，北京时间)
SCHEDULE_TIMEZONE=Asia/Shanghai    # 时区 (北京时间)
SCHEDULE_DAILY_HOUR=8
SCHEDULE_DAILY_MINUTE=0
SCHEDULE_WEEKLY_HOUR=8
SCHEDULE_WEEKLY_MINUTE=0

# 日历范围配置 - 每日任务
DAILY_PAST_DAYS=0                  # 每天日历: 过去 0 天
DAILY_FUTURE_DAYS=1                # 每天日历: 未来 1 天

# 日历范围配置 - 周一任务
WEEKLY_PAST_DAYS=0                 # 周一日历: 过去 0 天
WEEKLY_FUTURE_DAYS=365             # 周一日历: 未来 365 天

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/scheduler.log

# 轮询配置
POLL_INTERVAL=60                # 轮询间隔（秒），默认300秒（5分钟）